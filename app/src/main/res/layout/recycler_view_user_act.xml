<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/standard_margin_views8"
    android:layout_marginRight="@dimen/standard_margin_views8"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_frgDocument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consLayout_line1_recycler_situationPayAct"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/standard_margin_views16"
            android:layout_marginLeft="@dimen/standard_margin_views16"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtView_title_index_recyclerUserAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/standard_margin_views8"
                android:gravity="center|right"
                android:text="ردیف: "
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtView_index_recyclerUserAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/standard_margin_views8"
                android:gravity="center|right"
                android:text="123456789"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@id/txtView_title_index_recyclerUserAct"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtView_title_name_recyclerUserAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/standard_margin_views8"
                android:gravity="center|right"
                android:text="نام: "
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/txtView_name_recyclerUserAct"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtView_name_recyclerUserAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_margin_views4"
                android:layout_marginTop="@dimen/standard_margin_views8"
                android:layout_marginRight="@dimen/standard_margin_views8"
                android:gravity="center|left"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtView_title_date_create_recyclerUserAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/standard_margin_views8"
                android:layout_marginRight="@dimen/standard_margin_views8"
                android:gravity="center|right"
                android:text="تاریخ ثبت نام: "
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtView_title_index_recyclerUserAct" />

            <TextView
                android:id="@+id/txtView_date_create_recyclerUserAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_views8"
                android:layout_marginRight="@dimen/standard_margin_views8"
                android:gravity="center|left"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@id/txtView_title_date_create_recyclerUserAct"
                app:layout_constraintTop_toBottomOf="@id/txtView_title_index_recyclerUserAct" />
            <TextView
                android:id="@+id/txtView_title_last_update_recyclerUserAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/standard_margin_views8"
                android:layout_marginRight="@dimen/standard_margin_views8"
                android:gravity="center|right"
                android:text="اخرین اپدیت: "
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtView_title_date_create_recyclerUserAct" />

            <TextView
                android:id="@+id/txtView_last_update_recyclerUserAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_views8"
                android:layout_marginRight="@dimen/standard_margin_views8"
                android:gravity="center|left"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@id/txtView_title_last_update_recyclerUserAct"
                app:layout_constraintTop_toBottomOf="@id/txtView_title_date_create_recyclerUserAct" />
            <TextView
                android:id="@+id/txtView_title_phone_recyclerUserAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/standard_margin_views8"
                android:layout_marginRight="@dimen/standard_margin_views8"
                android:gravity="center|right"
                android:text="موبایل: "
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtView_title_last_update_recyclerUserAct" />

            <TextView
                android:id="@+id/txtView_phone_recyclerUserAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_views8"
                android:layout_marginRight="@dimen/standard_margin_views8"
                android:gravity="center|left"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@id/txtView_title_phone_recyclerUserAct"
                app:layout_constraintTop_toBottomOf="@id/txtView_title_last_update_recyclerUserAct" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_margin_views8"
                app:layout_constraintTop_toBottomOf="@id/txtView_title_phone_recyclerUserAct" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_margin_views8"
        app:layout_constraintTop_toBottomOf="@id/card_frgDocument" />
</androidx.constraintlayout.widget.ConstraintLayout>